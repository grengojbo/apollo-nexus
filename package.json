{
	"name": "apollo-nexus",
	"version": "1.0.0",
	"main": "index.js",
	"license": "MIT",
	"private": true,
	"description": "Example Apollo Server nexes shema generation",
	"scripts": {
		"start": "node dist/server",
		"clean": "rm -rf dist",
		"build": "npm -s run clean && npm -s run generate && tsc",
		"generate": "npm -s run generate:prisma && npm -s run generate:nexus",
		"generate:types": "create-types",
		"generate:schema": "cnt --mq -f -o",
		"generate:prisma": "prisma generate",
		"generate:nexus": "ts-node --transpile-only src/nexusSchema",
		"db:create": "prisma migrate up --experimental --auto-approve --create-db",
		"migration:save": "prisma migrate save --experimental",
		"migration:up": "prisma migrate up --experimental --auto-approve",
		"migration:down": "prisma migrate down 1 --experimental",
		"dev": "ts-node-dev --no-notify --respawn --transpile-only src/server",
		"seed": "ts-node prisma/seed.ts",
		"style": "prettier --write 'src/**/*'"
	},
	"dependencies": {
		"@nexus/schema": "0.16.0",
		"@paljs/nexus": "2.2.1",
		"@prisma/client": "2.8.1",
		"apollo-server": "2.18.2",
		"graphql": "15.3.0",
		"nexus-plugin-prisma": "^0.21.0"
	},
	"devDependencies": {
		"faker": "^5.1.0",
		"@prisma/cli": "2.8.1",
		"@types/faker": "^5.1.2",
		"@types/node": "14.11.8",
		"create-nexus-type": "^1.3.0",
		"prettier": "2.1.2",
		"ts-node": "8.10.2",
		"ts-node-dev": "1.0.0-pre.63",
		"typescript": "4.0.3"
	},
	"prettier": {
		"singleQuote": true,
		"semi": false,
		"trailingComma": "all"
	},
	"repository": "https://github.com/grengojbo/apollo-nexus.git",
	"author": "Oleg Dolya<oleg.dolya@gmail.com>"
}
